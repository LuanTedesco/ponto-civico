<div class="container mt-4">
  <div id="comments">
    <% @comments.each do |comment| %>
      <div class="comment">
        <%= "#{comment.user.username} - #{comment.created_at.strftime("%d/%m/%Y")}:" %>
        <%= render comment %>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form_for([@post, Comment.new], url: comments_path(@post), method: :post) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", placeholder: "Enter your comment here", rows: 3 %>
  </div>
  <%= f.submit "Create Comment", class: "btn btn-primary" %>
<% end %>

</div>

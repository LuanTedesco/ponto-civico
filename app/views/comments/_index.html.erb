  <div class="custom-card mb-3">
    <div class="custom-card-body bg-color-2 text-white">
    <h5 class="card-title">Comments</h5>
    <div id="comments">
      <% @comments.each do |comment| %>
        <div class="comment mb-3 pb-3">
          <hr>
          <p class="comment-info"><strong><%= @post.user.username if @post.user %></strong> â€¢ <%= time_ago_in_words(@post.created_at) %> ago</p>
          <div class="comment-content">
            <%= render comment %>
          </div>
          <% if current_user.id == comment.user_id %>
            <div class="btn-group" role="group">
              <%= link_to "Edit", edit_comment_path(comment), class: "btn btn-dark mr-2" %>
              <%= button_to "Destroy comment", comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-3">
      <%= form_for([@post, Comment.new], url: post_comments_path(@post), method: :post) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", placeholder: "Enter your comment here", rows: 3 %>
        </div>
        <%= f.submit "Create Comment", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-4 d-flex align-items-center">
  <div class="mx-auto col-md-8 col-lg-10">

    <h1 class="text-white">Categories</h1>

    <div class="mb-3">
      <%= link_to "New category", new_category_path, class: "btn btn-primary" %>
    </div>

    <div class="table-responsive">
      <table class="table table-dark">
        <thead class="input-transparent">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= category.description %></td>
              <td><%= category.status ? "Active" : "Inactive" %></td>
              <td>
                <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning btn-sm me-2" %>
                <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #243439
  }

  .container {
    padding-top: 20px;
  }

  .btn {
    color: #fff;
  }

  .input-transparent {
  background: #243439;
  border-width: 0;
  color: white;
  }

  .input-transparent:focus {
  background: #243439;
  border-width: 0;
  color: white;
  }

  .input-transparent::placeholder {
    color: white;
  }
</style>

<div class="container mt-4 d-flex align-items-center">
  <div class="mx-auto col-md-8 col-lg-6">
    <%= form_with(model: category, class: "form") do |form| %>
      <% if category.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
          <ul>
            <% category.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label text-white" %>
        <%= form.text_field :title, class: "form-control input-transparent text-white" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label text-white" %>
        <%= form.text_field :description, class: "form-control input-transparent text-white" %>
      </div>

      <div class="mb-3">
        <div class="form-check">
          <%= form.label :status, class: "form-check-label text-white" %>
          <%= form.check_box :status, class: "form-check-input text-white" %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<style>
  .input-transparent {
  background: #243439;
  border-width: 0;
  color: white;
  }

  .input-transparent:focus {
  background: #243439;
  border-width: 0;
  color: white;
  }

  .input-transparent::placeholder {
    color: white;
  }
</style>

<div class="container mt-4">
  <div class="mx-auto col-md-8 col-lg-6">
    <h1 class="mb-4">Posts</h1>

    <div id="posts">
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <%= link_to post, class: "text-decoration-none text-dark" do %>
            <div class="card-body">
              <%= render post %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

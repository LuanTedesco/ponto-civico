<div class="container mt-4 d-flex align-items-center">
  <div class="mx-auto col-md-8 col-lg-6">
    <%= form_with(model: post) do |form| %>
      <% if post.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, class: "font-weight-bold" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the title" %>
      </div>

      <div class="form-group">
        <%= form.label :body, class: "font-weight-bold" %>
        <%= form.text_area :body, class: "form-control", placeholder: "Enter the body" %>
      </div>

      <% if current_user.role == 'admin' %>
        <div class="form-group form-check">
        <%= form.check_box :status, class: "form-check-input" %>
        <%= form.label :status, class: "form-check-label" %>
      </div>
      <% end %>

      <div class="form-group">
        <%= form.submit "Save Post", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

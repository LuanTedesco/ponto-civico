<div id="<%= dom_id post %>">
  <p>
    <strong>title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <% if current_user && current_user.role == "admin" %>
    <p>
      <strong>Status:</strong>
      <%= post.status %>
    </p>
  <% end %>
</div>
